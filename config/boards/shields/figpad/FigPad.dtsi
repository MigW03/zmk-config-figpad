#include <physical_layouts.dtsi>
#include <dt-bindings/zmk/matrix_transform.h>

/ {

    default_transform: default_transform {
        compatible = "zmk,matrix-transform";
        columns = <4>;
        rows = <3>;
        map = <
            RC(0,0) RC(0,1) RC(0,2) RC(0,3)
            RC(1,0) RC(1,1) RC(1,2) RC(1,3)
            RC(2,0) RC(2,1)
        >;
    };

    physical_layout0: physical_layout_0 {
        compatible = "zmk,physical-layout";
        display-name = "FigPad";
        transform = <&default_transform>;
        kscan = <&kscan>;

        keys  //                     w   h    x    y     rot    rx    ry
            = <&key_physical_attrs 100 100    0    0       0     0     0>
            , <&key_physical_attrs 100 100  100    0       0     0     0>
            , <&key_physical_attrs 100 100  250   25       0     0     0>
            , <&key_physical_attrs 100 100  350   25       0     0     0>
            , <&key_physical_attrs 100 100    0  125       0     0     0>
            , <&key_physical_attrs 100 100  100  125       0     0     0>
            , <&key_physical_attrs 100 100  250  125       0     0     0>
            , <&key_physical_attrs 100 100  350  125       0     0     0>
            , <&key_physical_attrs 100 100   50  225       0     0     0>
            , <&key_physical_attrs 100 100  300  225       0     0     0>
            ;
    };
};
